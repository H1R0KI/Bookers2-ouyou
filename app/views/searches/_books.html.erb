<table class="table table-hover">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <th>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(100, 100) %>
        <% end %>
      </th>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>